---
import { Icon } from "astro-icon/components";
---

<div id="home">
  <div class="nav">
    <a href="/" class="nav-item">koncepta</a>
    <a href="/" class="nav-item">about</a>
    <div class="nav-icon">
      <Icon name="ri:sun-line" />
    </div>
    <a href="/" class="nav-item">notes</a>
    <a href="/" class="nav-item">syllabus</a>
  </div>

  <div class="title">
    <h1>notes</h1>
    <h1>concepts</h1>
    <h1>ready</h1>
  </div>
</div>

<style>
  @font-face {
    font-family: "Poppins-Regular";
    src: url("/fonts/Poppins-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Poppins-Bold";
    src: url("/fonts/Poppins-Bold.ttf") format("truetype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Poppins-Light";
    src: url("/fonts/Poppins-Light.ttf") format("truetype");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "DynaPuff";
    src: url("/fonts/DynaPuff.ttf") format("truetype");
    font-display: swap;
  }

  body {
    background: #2b2b2e;
    color: #fafaf8;
    font-family: "Poppins-Regular";
  }

  a {
    font-family: "Poppins-Light";
    text-decoration: none;
    color: #fafaf8;
  }
  a:hover {
    text-decoration: underline;
  }

  .title {
    font-family: "DynaPuff";
    text-align: center;
    font-weight: 700;
    font-size: 2.5rem;
    padding-block: 7rem;
  }
  .title h1 {
    margin: 0;
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    padding-block: 3rem;
    text-align: center;
  }

  .nav-item {
    width: 120px;
    font-size: 18px;
    letter-spacing: 10%;
  }

  .nav-icon {
    background: #39393d;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .nav-icon svg {
    width: 22px;
    height: 22px;
  }
  .nav-icon:hover {
    cursor: pointer;
  }
</style>
